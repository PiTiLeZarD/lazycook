- if (!reveal)
  !!!5

  html(lang="en", class="no-js", ng-app="") 

    head
    
      meta(charset="utf-8")
      meta(name="viewport", content="width=device-width")

      title #{title}

      link(rel='stylesheet', href='/css/lib/foundation.min.css')
      link(rel='stylesheet', href='/css/lazycook.css')

      script(type="text/javascript", src="/js/lib/custom.modernizr.js")
      script(type="text/javascript", src="/js/lib/angular.js")

    body
      
      block bodyContent

      script(type="text/javascript").
        document.write('<script src=' +
          ('__proto__' in {} ? '/js/lib/zepto' : 'js/lib/jquery') +
          '.js><\/script>');

      script(type="text/javascript", src="/js/lib/foundation.min.js")
    
      script(type="text/javascript").
        $(document).foundation();
-else
  block content