
extend ../../views/layout

block content
  
  form(action="/login", method="POST").row
    fieldset.small-12.columns
      legend Login

      .row
        .small-6.columns
          label Login:
          input(type="text", name="login")

        .small-6.columns
          label Password:
          input(type="password", name="password")

      input(type="submit", value="Log In").button.radius