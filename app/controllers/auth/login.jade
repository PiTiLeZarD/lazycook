
extend ../../views/layout

block main
  
  form(action="/login", method="POST").row
    fieldset.small-12.columns
      legend Login

      - if (session.messages && session.messages.length)
        .row
          .large-8.large-offset-2.columns
            - each message in session.messages
              .alert-box.radius.alert 
                =message

      .row
        .small-6.columns
          label Login:
          input(type="text", name="login")

        .small-6.columns
          label Password:
          input(type="password", name="password")

      input(type="submit", value="Log In").button.radius