!!!5

html(lang="en", class="no-js", ng-app="") 

  head
  
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width")

    title #{title}

    link(rel='stylesheet', href='/css/foundation.min.css')
    link(rel='stylesheet', href='/css/lazycook.css')

    script(type="text/javascript", src="/js/custom.modernizr.js")
    script(type="text/javascript", src="/js/angular.js")

  body
    
    block content

    script(type="text/javascript").
      document.write('<script src=' +
        ('__proto__' in {} ? '/js/zepto' : 'js/jquery') +
        '.js><\/script>');

    script(type="text/javascript", src="/js/foundation.min.js")
  
    script(type="text/javascript").
      $(document).foundation();
